{
  "name": "react-wizardry",
  "version": "0.1.3",
  "description": "Data driven smart wizard",
  "type": "module",
  "keywords": [
    "wizard",
    "react-wizard",
    "stepper",
    "react-stepper"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/prabhuignoto/react-wizardry"
  },
  "scripts": {
    "dev": "vite",
    "build": "webpack --mode=production --node-env=production",
    "preview": "vite preview",
    "format": "npx prettier --write ./src/components/*.{ts,tsx}",
    "test": "npx vitest --config ./vitest.config.ts --coverage",
    "lint": "npx eslint ./src/components/**/*.{ts,tsx}",
    "build:dev": "webpack --mode=development",
    "build:prod": "webpack --mode=production --node-env=production",
    "watch": "webpack --watch"
  },
  "publishConfig": {
    "cache": "cache/.npm",
    "registry": "https://registry.npmjs.org/"
  },
  "browserslist": [
    "last 2 versions",
    "not op_mini all",
    "not ie <= 11"
  ],
  "dependencies": {
    "classnames": "^2.3.1",
    "nanoid": "^3.3.3",
    "use-debounce": "^7.0.1"
  },
  "peerDependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "author": {
    "name": "Prabhu Murthy",
    "email": "prabhu.m.murthy@gmail.com",
    "url": "https://www.prabhumurthy.com"
  },
  "files": [
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true
    },
    "extends": [
      "plugin:react/recommended",
      "standard",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "@typescript-eslint"
    ],
    "rules": {
      "no-use-before-define": "off",
      "react/prop-types": "off"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "main": "dist/wizard.js",
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.1.1",
    "@types/react": "^18.0.7",
    "@types/react-dom": "^18.0.2",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@vitejs/plugin-react": "^1.3.1",
    "@webpack-cli/generators": "^2.4.2",
    "autoprefixer": "^10.4.5",
    "babel-loader": "^8.2.5",
    "c8": "^7.11.2",
    "css-loader": "^6.7.1",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-n": "^15.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "husky": "^7.0.4",
    "jsdom": "^19.0.0",
    "mini-css-extract-plugin": "^2.6.0",
    "postcss": "^8.4.12",
    "postcss-loader": "^6.2.1",
    "postcss-preset-env": "^7.4.3",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "sass": "^1.51.0",
    "sass-loader": "^12.6.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.7.1",
    "stylelint-config-standard": "^25.0.0",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.3",
    "vite": "^2.9.2",
    "vitest": "^0.10.0",
    "webpack": "^5.72.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.2"
  }
}
